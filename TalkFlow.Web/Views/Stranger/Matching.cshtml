@{
    ViewData["Title"] = "Stranger";
}

@section customHead {
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
    <link rel="stylesheet" href="~/css/stranger_matching.css" asp-append-version="true" />
}

<div class="modal fade" id="ModalFinderSettings" tabindex="-1" aria-labelledby="ModalJoinRoomTitle" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalJoinRoomTitle">Finder Settings</h5>
                <button id="btn-icon-visibility" class="bg-white py-2 ps-0 d-flex justify-content-center" type="button" data-bs-dismiss="modal" aria-label="Close" style="border:none;">
                    <span class="material-icons" id="icon_close_modal_join_room">
                        clear
                    </span>
                </button>
            </div>
            <div class="modal-body">
                <form id="form_join_mate_room">
                    <div class="m-auto" style="max-width:450px;">
                        <select class="form-select mb-3" aria-label=".form-select-lg example">
                            <option selected>You want to find</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </div>
                    <div class="m-auto d-flex" style="max-width:450px;">
                        <select class="form-select mb-3 me-1" aria-label=".form-select-lg example" style="width:49%;">
                            <option selected>Whose age is</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                        <select class="form-select mb-3 ms-1" aria-label=".form-select-lg example" style="width:49%;">
                            <option selected>And come from</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
                        <label class="form-check-label" for="flexCheckChecked">
                            Accept attendees automatically
                        </label>
                    </div>
                    <div class="w-100 text-center">
                        <button type="submit" class="btn btn-primary me-2">Join</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="min-vh-100 d-flex align-items-center justify-content-center flex-column w-100 animated-bg">
    <div class="card-modern particle-glow p-5 d-flex flex-column justify-content-center align-items-center text-center" style="max-width:550px; width: 95%; animation: fadeInUp 0.6s ease-out;">
        <div class="loader mb-4" style="animation: fadeInUp 0.6s ease-out 0.2s both;"></div>
        <div style="animation: fadeInUp 0.6s ease-out 0.4s both;">
            <h3 class="mb-3" style="background: linear-gradient(135deg, #6366f1, #06b6d4); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; font-weight: 700; font-size: 1.5rem;">
                <i class="fas fa-search me-2"></i>Searching for matches...
            </h3>
            <p class="text-muted mb-4">Please wait while we find someone who matches your preferences</p>
        </div>
        <div id="div_matching" class="w-100 d-grid gap-2" style="animation: fadeInUp 0.6s ease-out 0.6s both;">
            <button type="button" class="btn btn-modern-secondary btn-lg" onclick="location.href='@Url.Action("Waiting","Stranger")'">
                <i class="fas fa-clock me-2"></i>Keep Waiting
            </button>
            <button type="button" class="btn btn-outline-light btn-lg" onclick="location.href='@Url.Action("Index","Stranger")'">
                <i class="fas fa-arrow-left me-2"></i>Go Back
            </button>
        </div>
    </div>
</div>
