@{
    ViewData["Title"] = "Stranger";
}

@section customHead {
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
    <style>
        .eye-lid {
            width: 200px;
            height: 200px;
            border-radius: 50%;
            background: linear-gradient(135deg, #6366f1, #06b6d4);
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 10px 40px rgba(99, 102, 241, 0.4);
            animation: eyeBlink 3s ease-in-out infinite;
        }

        .eye {
            width: 160px;
            height: 160px;
            border-radius: 50%;
            background: white;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .cornea {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: linear-gradient(135deg, #1e293b, #0f172a);
            display: flex;
            align-items: center;
            justify-content: center;
            animation: eyeMove 4s ease-in-out infinite;
        }

        .white-pupil {
            width: 20px;
            height: 20px;
            border-radius: 50%;
            background: white;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.8);
        }

        @@keyframes eyeBlink {
            0%, 90%, 100% { transform: scaleY(1); }
            95% { transform: scaleY(0.1); }
        }

        @@keyframes eyeMove {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-10px); }
            75% { transform: translateX(10px); }
        }

        .custom-btn {
            position: relative;
            display: inline-block;
            padding: 15px 40px;
            margin: 10px;
            color: white;
            text-decoration: none;
            text-transform: uppercase;
            font-weight: 600;
            letter-spacing: 2px;
            border-radius: 8px;
            overflow: hidden;
            cursor: pointer;
            transition: all 0.5s ease;
            background: linear-gradient(135deg, #6366f1, #818cf8);
            box-shadow: 0 5px 20px rgba(99, 102, 241, 0.3);
        }

        .custom-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(99, 102, 241, 0.5);
            color: white;
        }

        .custom-btn span {
            position: absolute;
            display: block;
        }
    </style>
}

<div class="min-vh-100 d-flex align-items-center justify-content-center flex-column w-100 animated-bg">
    <div class="card-modern particle-glow p-5 d-flex flex-column justify-content-center align-items-center text-center" style="max-width: 600px; width: 95%; animation: fadeInUp 0.6s ease-out;">
        <div style="max-width:550px; margin-bottom: 2rem; animation: fadeInUp 0.6s ease-out 0.2s both;">
            <div class="eye-lid">
                <div class="eye">
                    <div class="cornea">
                        <div class="white-pupil"></div>
                    </div>
                </div>
            </div>
        </div>
        <div style="animation: fadeInUp 0.6s ease-out 0.4s both;">
            <h3 class="mb-4" style="font-size: 1.75rem; text-transform: uppercase; letter-spacing: 0.15rem; background: linear-gradient(135deg, #6366f1, #06b6d4); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; font-weight: 700;">
                <span id="stranger_name">Phuc</span> wants to connect with you
            </h3>
            <p class="text-muted mb-4">Would you like to start a conversation?</p>
        </div>
        <form id="homepage_form" class="w-100 d-flex flex-column gap-3" style="max-width: 400px; animation: fadeInUp 0.6s ease-out 0.6s both;">
            <a class="custom-btn" onclick="location.href='@Url.Action("Meeting2Peer","Stranger")'">
                <i class="fas fa-check me-2"></i>Accept
                <span></span>
            </a>
            <a class="custom-btn" style="background: linear-gradient(135deg, #ef4444, #dc2626);" onmouseover="this.style.background='linear-gradient(135deg, #dc2626, #b91c1c)'; this.style.boxShadow='0 0 1px #f40303, 0 0 10px #f40303, 0 0 20px #f40303, 0 0 50px #f40303'" onmouseout="this.style.background='linear-gradient(135deg, #ef4444, #dc2626)'; this.style.boxShadow='0 5px 20px rgba(239, 68, 68, 0.3)'" onclick="location.href='@Url.Action("Matching","Stranger")'">
                <i class="fas fa-times me-2"></i>Decline
                <span></span>
            </a>
        </form>
    </div>
</div>
